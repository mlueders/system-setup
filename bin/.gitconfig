[user]
	name = Mike Lueders
	email = mike@roadkill.org
[alias]
	co = checkout
	br = branch
	ci = commit
	ca = commit --amend
	cp = cherry-pick
	st = status
	dc = diff --cached
	rbc = rebase --continue
	pm = pull origin master
	last = log -1 HEAD
[core]
	autocrlf = input
	excludesfile = ~/.gitignore_global
	ignorecase = false
	editor = vi
[color]
	ui = true
[push]
	default = simple
